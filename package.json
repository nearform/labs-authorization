{
  "name": "labs-authorization",
  "version": "0.0.1",
  "description": "Full stack authorization component",
  "main": "api/index.js",
  "scripts": {
    "pg:build": "docker-compose build",
    "pg:start": "docker-compose up -d",
    "pg:stop": "docker-compose down",
    "pg:init": "[ ! -d ./logs ] && mkdir ./logs;./scripts/init/database/db_init.sh | tee ./logs/init-db.log",
    "pg:load-test-data": "./scripts/init/database/db_load.sh | tee ./logs/load-test-data.log",
    "lint:api": "cd api && npm run lint",
    "lint:service": "cd service && npm run lint",
    "lint:component": "cd component && npm run lint",
    "lint": "npm run lint:api && npm run lint:service && npm run lint:component",
    "start:api": "cd api && npm start",
    "start:service": "cd service && npm start",
    "start:component": "cd component && npm start",
    "start": "echo \"Please use individual start scripts, start:api start:service start:component\" && exit 0",
    "test:api": "cd api && npm run test",
    "test:service": "cd service && npm run test",
    "test:component": "cd component && npm run test",
    "test": "npm run pg:init && npm run pg:load-test-data && npm run test:api && npm run test:service && npm run test:component",
    "coverage:api": "cd api && npm run coverage",
    "coverage:service": "cd service && npm run coverage",
    "coverage:component": "cd component && npm run coverage",
    "coverage": "npm run coverage:api && npm run coverage:service && npm run coverage:component"
  },
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/labs-authorization.git"
  },
  "author": "Mark Ireland",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nearform/labs-authorization/issues"
  },
  "homepage": "https://github.com/nearform/labs-authorization#readme",
  "dependencies": {
    "async": "^2.0.1",
    "pg": "^6.1.0"
  },
  "devDependencies": {
    "mock-require": "^2.0.0",
    "postgrator": "^2.8.2",
    "pre-commit": "1.1.3"
  }
}
